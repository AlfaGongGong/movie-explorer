{
  "name": "movie-explorer",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "commitizen": "^4.3.0",
    "husky": "^9.0.11",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "styled-components": "^6.1.11",
    "vite": "^5.2.11",
    "web-vitals": "^2.1.4",
    "zod": "^3.23.8",
    "stylelint": "^14.0.0"
  },
  "scripts": {
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint",
    "start": "react-scripts start",
    "commit": "cz",
    "format": "prettier --write \"src/**/*.{js,jsx,json,css,scss,md}\"",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "serve": "serve -s build",
    "lint:styles": "stylelint \"src/**/*.{js,jsx,ts,tsx,css,scss}\"",
    "lint:styles:fix": "stylelint --fix \"src/**/*.{js,jsx,ts,tsx,css,scss}\""
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "axios": "^1.6.8",
    "eslint": "^8.57.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-standard": "^5.0.0",
    "gh-pages": "^6.1.1",
    "jest": "^27.4.7",
    "prettier": "^2.8.8",
    "react-icons": "^4.3.1",
    "react-router": "^6.2.1",
    "react-router-dom": "^6.2.1",
    "react-scripts": "^5.0.1",
    "react-test-renderer": "^18.3.1",
    "serve": "^14.2.3",
    "stylelint": "^13.13.1"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "commitizen": {
    "path": "cz-conventional-changelog"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "stylelint": {
    "processors": [
      "stylelint-processor-styled-components"
    ],
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-styled-components"
    ]
  },
  "stylelint.ignoreFiles": [
    "src/styles/normalize.css"
  ],
  "stylelint.configBasedir": "node_modules"
}
